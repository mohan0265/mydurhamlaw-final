import React, { useState } from "react";
import { Button } from "@/components/ui/button";

const kindnessPrompts = [
  "Send a thank-you DM to a friend.",
  "Shout out a classmate in the chat.",
  "Offer to share your notes.",
  "Pay a compliment.",
  "Invite someone for a coffee break.",
  "Share a positive law podcast.",
];

const ActivityCards: React.FC = () => {
  const [kindness, setKindness] = useState("");

  function newKindness() {
    const idx = Math.floor(Math.random() * kindnessPrompts.length);
    setKindness(kindnessPrompts[idx]);
  }

  return (
    <div className="bg-gradient-to-br from-green-50 to-yellow-100 rounded-2xl shadow px-4 py-3 flex flex-col gap-3 mb-2">
      <h3 className="font-bold text-lg">✨ Unwind</h3>
      {/* 4-7-8 breathing steps */}
      <div className="border-l-4 border-blue-200 pl-3">
        <strong>4-7-8 Breathing:</strong>
        <div className="text-xs mt-1">
          Inhale for 4s → Hold for 7s → Exhale for 8s
        </div>
      </div>
      {/* 1-min stretch */}
      <div className="border-l-4 border-teal-200 pl-3">
        <strong>1-min Quick Stretch:</strong>
        <div className="text-xs mt-1">Neck rolls, side bends, reach for the sky!</div>
      </div>
      {/* Random kindness prompt */}
      <div className="border-l-4 border-pink-200 pl-3">
        <strong>Kindness Prompt:</strong>
        <div className="flex items-center gap-2 mt-1">
          <span className="text-xs">{kindness || "Need an idea? Generate one!"}</span>
          <Button size="xs" onClick={newKindness} variant="outline" className="text-xs">
            New
          </Button>
        </div>
      </div>
    </div>
  );
};

export default ActivityCards;
